/**index.wxss**/
.userinfo {
  /* height: 200px; */
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 20px;
}

.clockBody{
  background-image: url('http://img2.imgtn.bdimg.com/it/u=3634932716,2600275072&fm=26&gp=0.jpg');
  background-size: cover;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: medium;
  width: 350rpx;
  height: 350rpx;
  margin-top: 20rpx;
  margin-left: 5%;
  margin-right: 5%;
}

.view_button{
  display: flex;
}

.view_sustainedTime{
  display: flex;
  color: rgba(102, 255, 0, 0.658);
  font-size: medium;
}

.is_focus_text{
  /* position: relative; */
  font-size: medium;
  width: 60%;
  height: 20px;
  text-align: left;
  color:  rgb(79, 80, 77);
  background-color: lawngreen;
  border-radius: 30px;
  margin: auto 0px auto 10%; 
  padding: auto;
}

.not_focus_text{
  font-size:medium;
  width: 60%;
  height: 20px;
  text-align: right;
  color:  rgb(79, 80, 77);
  background-color: rgba(127, 255, 212, 0.801);
  border-radius: 30px;
  margin: auto 10% auto 0px; 
  padding: auto;
}


.is_focus_view{
  /* position: relative; */
  width: 100%;
  height: 30px;
  text-align: left;
  color:  rgb(79, 80, 77);
  background-color: rgb(255, 255, 255);
  border-radius: 30px;
}

.not_focus_view{
  width: 100%;
  height: 30px;
  text-align: right;
  color:  rgb(79, 80, 77);
  background-color: rgba(255, 255, 255, 0.801);
  border-radius: 30px;
}


.scroll_view_t{
  width: 100%;
  height: 300rpx;
  white-space: nowrap; 
}

.second{
  color: red;
  font-size: medium;
}

.minute{
  color: red;
  font-size: medium;
}

.hour{
  color: red;
  font-size: medium;
}

.studentId{
  background-color: rgb(185, 179, 179);
}

.bodyTabOne{
  justify-content: center;
  align-items: center;
}




